                              <td class="contacttd" valign="top">
                                <input class="myInputarea" type="text" name="email" id="email" placeholder="Email"
                                  maxlength="80" size="25"
                                  style="background-color:#FDFDFE; border:1px solid #DDA92E;font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px;">
