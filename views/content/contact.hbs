<div id='main-wrap' class="flex flex-col">
  <div class="w">
    <a href="mailto:John@Midas.gold">
      <img class="m-auto" src="../images/bell.jpg" alt="Picture" style="width:auto;max-width:300px">
    </a>
  </div>


  <div class="flex flex-wrap">
    <div class="m-auto my-8" style="width: 360px;">
      <img src="../images/businesscard.jpg" alt="Picture" style="width:435;max-width:100%">
    </div>

    <form class="m-auto" name="message-form" id="message-form">
      <table class="contacttable" width="455px">
        <tbody>
          <tr>
            <td class="contacttd" valign="top">
              <input class="myInputarea" type="text" name="name" id="name" placeholder="Your name" maxlength="50"
                size="25"
                style="background-color:#FDFDFE; border:1px solid #DDA92E;font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px;">
            </td>
            <td class="textTd" rowspan="4" valign="top">
              <textarea class="myTextarea" name="message" id="message" placeholder="Message" maxlength="2000" cols="27"
                style="background-color:#FDFDFE; border:1px solid #DDA92E; font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px; line-height: 1.3em; margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px;"></textarea>
            </td>
          </tr>
          <tr>
            <td class="contacttd" valign="top">
              <input class="myInputarea" type="text" name="email" id="email" placeholder="Email" maxlength="80"
                size="25"
                style="background-color:#FDFDFE; border:1px solid #DDA92E;font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px;">
            </td>
          </tr>
          <tr>
            <td class="contacttd" valign="top">
              <input class="myInputarea" type="text" placeholder="Phone" name="tel" id="tel" maxlength="30" size="25"
                style="background-color:#FDFDFE; border:1px solid #DDA92E;font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px;">
            </td>
          </tr>
          <tr>
            <td class="contacttd" valign="top">
              <input class="myInputarea" type="text" name="sub" id="sub" placeholder="Subject" maxlength="30"
                v-align="bottom" size="25"
                style="background-color:#FDFDFE; border:1px solid #DDA92E;font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px;">
            </td>
          </tr>
          <tr>
            <td class="contacttd" colspan="2" style="text-align:right">
              <input type="submit" name="submit" id="submit" value="Send"
                style="border: 0px none; color: #F3E0B3; cursor: pointer; background-color: #93701F; font-family:'Quattrocento', serif; line-height: 1.3em; font-size: 18px; padding: 5px; top: 0px;">
            </td>
          </tr>
        </tbody>
      </table>
      <p class="hidden" id='success-div'>Your message was sent!</p>
    </form>
  </div>
</div>