<h1 class='single-header cart-header' >{{title}}</h1>
<form name="deposit-form" id="deposit-form" method="post" action="/admin/deposit" style="width: 245px; left: 50%; position: relative; transform: translateX(-50%);">

  <input class="myTextarea" type="text" name="depositAmount" id="depositAmount" placeholder="Deposit Amount in Dolars" maxlength="50" size="25" style="background-color:#FDFDFE; border:1px solid #DDA92E;font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px;">

  <input class="myTextarea" name="email" id="email" placeholder="Email of deposit account" maxlength="50" style="background-color:#FDFDFE; border:1px solid #DDA92E; font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px; line-height: 1.3em; margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px;"></input>

  <input class="myTextarea" name="date" id="date" placeholder="Date" maxlength="50" style="background-color:#FDFDFE; border:1px solid #DDA92E; font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px; line-height: 1.3em; margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px;"></input>

  <textarea class="myTextarea" name="note" id="note" placeholder="Deposit note" maxlength="250" cols="27" style="background-color:#FDFDFE; border:1px solid #DDA92E; font-family:'Quattrocento', serif; font-size: 16px; color: rgb(147, 112, 31); padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px; line-height: 1.3em; margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px;"></textarea>

  <input type="submit" name="submit" id="submit" value="Send" style="border: 0px none; color: #F3E0B3; cursor: pointer; background-color: #93701F; font-family:'Quattrocento', serif; line-height: 1.3em; font-size: 18px; padding: 5px; top: 0px;">

  <input type='hidden' name='_csrf' value='{{ csrfToken }}'>

<p id='success-div'>Your message was sent!</p>
</form>